<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:a4j="http://richfaces.org/a4j"
	xmlns:rich="http://richfaces.org/rich"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:ui="http://java.sun.com/jsf/facelets">
<ui:composition template="/jsp/include/template.xhtml">
	<ui:define name="breadcrumb">
		<h:panelGroup id="pnlBread">
			<h:outputLabel value="#{msgsRestricao['BREAD']}" />
		</h:panelGroup>
	</ui:define>
	<ui:define name="conteudo">
		<h:form>
			<a4j:keepAlive beanName="restricaoMB" />
			<rich:panel id="conteudo">
				<h:panelGroup
					id="panelCadastro"
					rendered="#{restricaoMB.showPanelCadastroVisualizacao}">
					<br />
					<rich:spacer height="10" />
					<h:graphicImage value="/images/icon_dados.jpg"
						style="vertical-align: bottom;" />
					<h:outputText
						id="lbl_titlePanelCadRestricaoCad"
						value="#{msgsRestricao['TITLE.panelIncluir']}"
						rendered="#{restricaoMB.showTitleIncluir}"
						styleClass="tituloPagina" />
					<h:outputText
						id="lbl_titlePanelCadRestricaoAlt"
						value="#{msgsRestricao['TITLE.panelAlterar']}"
						rendered="#{restricaoMB.showTitleAlterar}"
						styleClass="tituloPagina" />
					<h:outputText
						id="lbl_titlePanelCadRestricaoView"
						value="#{msgsRestricao['TITLE.panelVisualizar']}"
						rendered="#{restricaoMB.showTitleVisualizar}"
						styleClass="tituloPagina" />
					<br />
					<rich:spacer height="10" />
					<rich:panel
						id="pnlCadastroRestricaoCad"
						styleClass="panel-externo"
						rendered="#{restricaoMB.showPanelCadastro}">
						<table style="padding: 8px;">
							<tbody>
								<tr>
									<td class="label-middle"><h:outputText
											id="lblRestricaonuRestricaoCad"
											value="#{msgsRestricao['LABEL.coRestricao']}"
											styleClass="rotulos" />
									</td>
									<td><h:inputText
											id="inputRestricaoCodigoCad"
											value="#{restricaoMB.restricao.coRestricao}"
											styleClass="forms_input"
											disabled="#{restricaoMB.disabledInputCodigo}"
											maxlength="2"
											style="margin:3px;">
											<rich:jQuery
												selector="#inputRestricaoCodigoCad"
												timing="onload"
												query="focus()" />
										</h:inputText>
									</td>
								</tr>
								<tr>
									<td class="label-middle"><h:outputText
											id="lblRestricaoNomeCad"
											value="#{msgsRestricao['LABEL.noRestricao']}"
											styleClass="rotulos" />
									</td>
									<td><h:inputText
											rendered="#{restricaoMB.showInputNome}"
											id="inputRestricaoNomeCad"
											value="#{restricaoMB.restricao.noRestricao}"
											styleClass="forms_input"
											size="40"
											style="margin:3px;" />
									</td>
								</tr>
								<tr>
									<td class="label-middle"><h:outputText
											id="lblRestricaoSistemaDestinoCad"
											value="#{msgsRestricao['LABEL.sistemaDestino']}"
											styleClass="rotulos" />
									</td>
									<td><h:inputText
											rendered="#{restricaoMB.showInputSistemaDestino}"
											id="inputRestricaoSistemaDestinoCad"
											value="#{restricaoMB.restricao.sistemaDestino}"
											styleClass="forms_input"
											size="40"
											maxlength="8"
											style="margin:3px;" />
									</td>
								</tr>
								<tr>
									<td style="vertical-align: top;"><h:outputText
											id="lblRestricaoDescricaoCad"
											value="#{msgsRestricao['LABEL.deRestricao']}"
											styleClass="rotulos" />
									</td>
									<td><h:inputTextarea
											rendered="#{restricaoMB.showInputDescricao}"
											id="inputRestricaoDescricaoCad"
											value="#{restricaoMB.restricao.deRestricao}"
											styleClass="forms_input"
											rows="4"
											cols="50"
											style="margin:3px;" />
									</td>
								</tr>
							</tbody>
						</table>
					</rich:panel>
					<rich:panel
						id="pnlCadastroRestricaoView"
						styleClass="panel-externo"
						rendered="#{restricaoMB.showPanelVisualizar}">
						<table style="padding: 8px; padding-bottom: 0;">
							<tbody>
								<tr>
									<td class="label-middle"><h:outputText
											id="lblRestricaonuRestricaoView"
											value="#{msgsRestricao['LABEL.coRestricao']}"
											styleClass="rotulos" />
									</td>
									<td class="label-middle"><h:outputText
											rendered="#{restricaoMB.showOutputCodigo}"
											id="inputRestricaoCodigoView"
											value="#{restricaoMB.restricao.coRestricao}"
											style="margin:3px; line-height: 2;" />
									</td>
									<td
										class="label-middle"
										style="padding-left: 50px;"><h:outputText
											id="lblRestricaoNomeView"
											value="#{msgsRestricao['LABEL.noRestricao']}"
											styleClass="rotulos" />
									</td>
									<td><h:outputText
											rendered="#{restricaoMB.showOutputNome}"
											id="inputRestricaoNomeView"
											value="#{restricaoMB.restricao.noRestricao}"
											style="margin:3px; line-height: 2;" />
									</td>
									<td
										class="label-middle"
										style="padding-left: 50px;"><h:outputText
											id="lblRestricaoSituacaoView"
											value="#{msgsRestricao['LABEL.situacao']}"
											styleClass="rotulos" />
									</td>
									<td><h:panelGroup rendered="#{restricaoMB.showSituacaoVisualizarAtivo}">
											<h:graphicImage
												value="/images/icon_ativo.gif"
												style="vertical-align: bottom;" />
											<h:outputText value=" - Ativo" />
										</h:panelGroup> <h:panelGroup rendered="#{restricaoMB.showSituacaoVisualizarInativo}">
											<h:graphicImage
												value="/images/icon_-delete.gif"
												style="vertical-align: bottom;" />
											<h:outputText value=" - Inativo" />
										</h:panelGroup>
									</td>
								</tr>
							</tbody>
						</table>
						<table style="padding: 8px; padding-top: 0;">
							<tbody>
								<tr>
									<td class="label-middle"><h:outputText
											id="lblRestricaoSistemaDestinoView"
											value="#{msgsRestricao['LABEL.sistemaDestino']}"
											styleClass="rotulos" />
									</td>
									<td><h:outputText
											rendered="#{restricaoMB.showOutputSistemaDestino}"
											id="inputRestricaoSistemaDestinoView"
											value="#{restricaoMB.restricao.sistemaDestino}"
											style="margin:3px; line-height: 2;" />
									</td>
								</tr>
								<tr>
									<td style="vertical-align: top;"><h:outputText
											id="lblRestricaoDescricaoView"
											value="#{msgsRestricao['LABEL.deRestricao']}"
											styleClass="rotulos" />
									</td>
									<td><h:outputText
											rendered="#{restricaoMB.showOutputDescricao}"
											id="inputRestricaoDescricaoView"
											value="#{restricaoMB.restricao.deRestricao}"
											style="margin:3px; line-height: 2;" />
									</td>
								</tr>
							</tbody>
						</table>
					</rich:panel>
					<h:panelGroup
						id="pnlActionView"
						layout="block"
						style="text-align:right"
						rendered="#{restricaoMB.showPanelButtonVisualizar}">
						<a4j:commandButton
							id="btnVoltarRestricaoView"
							styleClass="rich-button-cinza rich-button"
							value="#{msgsRestricao['ACTION.voltar']}"
							actionListener="#{restricaoMB.doCancelar}"
							reRender="conteudo, CEFMessagePanel, pnlBread"
							style="margin-left: 15px;"
							immediate="true"
							rendered="#{restricaoMB.showButtonVoltar}"
							status="sts" />
						<a4j:commandButton
							id="btnCancelarRestricaoView"
							styleClass="rich-button-cinza rich-button"
							value="#{msgsRestricao['ACTION.cancelar']}"
							actionListener="#{restricaoMB.doCancelar}"
							reRender="conteudo, CEFMessagePanel, pnlBread"
							style="margin-left: 15px;"
							immediate="true"
							rendered="#{restricaoMB.showButtonCancelar}"
							status="sts" />
					</h:panelGroup>
					<br />
					<h:panelGroup
						rendered="#{restricaoMB.showPanelButtonSalvar}"
						id="pnlActionCad"
						layout="block"
						style="text-align:right">
						<a4j:commandButton
							id="btnGravarCadastroRestricaoCad"
							styleClass="rich-button"
							onclick="if(!confirm('#{msgsCef['MA002']}')) {return false;}"
							value="#{msgsRestricao['ACTION.gravar']}"
							actionListener="#{restricaoMB.doIncluir}"
							reRender="conteudo, CEFMessagePanel, pnlBread"
							rendered="#{restricaoMB.showButtonSalvarCadastro}"
							status="sts" />
						<a4j:commandButton
							id="btnGravarAlteracaoRestricaoCad"
							styleClass="rich-button"
							onclick="if(!confirm('#{msgsCef['MA003']}')) {return false;}"
							value="#{msgsRestricao['ACTION.gravar']}"
							actionListener="#{restricaoMB.doAlterar}"
							reRender="conteudo, CEFMessagePanel, pnlBread"
							rendered="#{restricaoMB.showButtonSalvarAltaracao}"
							status="sts" />
						<rich:spacer width="15" />
						<a4j:commandButton
							id="btnCancelarRestricaoCad"
							styleClass="rich-button-cinza rich-button"
							value="#{msgsRestricao['ACTION.cancelar']}"
							actionListener="#{restricaoMB.doCancelar}"
							reRender="conteudo, CEFMessagePanel, pnlBread"
							immediate="true"
							status="sts" />
					</h:panelGroup>
				</h:panelGroup>
				<h:panelGroup
					id="panelFiltro"
					rendered="#{restricaoMB.showPanelFiltro}">
					<br />
					<rich:spacer height="10" />
					<rich:panel
						id="pnlFiltroRestricaoFiltro"
						styleClass="panel-externo">
						<div class="span-23 clear last"
							id="pnlGridFiltroRestricao"
							style="padding:5px; margin-left: 16px; line-height: 2;">
							<div class="span-3 clear">
								<h:graphicImage
									value="/images/icon_search.gif"
									style="vertical-align: top;"/>
								<h:outputText
									style="margin-left: 4px;"
									id="lblRestricaoFiltro"
									value="#{msgsRestricao['LABEL.pesquisa']}"
									styleClass="rotulos"/>
							</div>
							<div class="span-14">
								<h:inputText
										id="inputRestricaoNomeFiltro"
										value="#{restricaoMB.pesquisaString}"
										styleClass="forms_input"
										style=" width: 510px; horizontal-align: left; font-size: 13px;" />
								<br/>
								<div style="margin-top: 10px">
									<h:selectBooleanCheckbox styleClass="rotulos"
										id="inputRestricaoMostraInativosFiltro"
										value="#{restricaoMB.pesquisaMostraInativos}" />
									<h:outputLabel value="#{msgsRestricao['LABEL.showInativos']}"
										for="inputRestricaoMostraInativosFiltro"
										class="rotulos"
										style="margin-left: 5px;" />
								</div>
							</div>
							<div class="span-3">
								<a4j:commandButton
									id="btnfiltrarRestricaoFiltro"
									styleClass="rich-button"
									value="#{msgsRestricao['ACTION.filtrar']}"
									actionListener="#{restricaoMB.doFiltrar}"
									reRender="conteudo, CEFMessagePanel, tableRestricao, pnlBread"
									status="sts" />
							</div>		
							<div class="span-3 last">
								<a4j:commandButton
									id="btnCadastrarRestricao"
									styleClass="rich-button"
									immediate="true"
									rendered="#{restricaoMB.showPanelButtonCadastrar}"
									value="#{msgsRestricao['ACTION.cadastrar']}"
									actionListener="#{restricaoMB.doCadastrar}"
									reRender="conteudo, pnlBread"
									status="sts" />
							</div>
							<br/>
						</div>
						<br clear="all" />
						<br clear="all" />
					</rich:panel>
				</h:panelGroup>
				<h:panelGroup
					id="panelLista"
					rendered="#{restricaoMB.showPanelLista}">
					<br />
					<h:graphicImage value="/images/icon_estagiarios_.gif"
						style="vertical-align: bottom;" />
					<h:outputText
						id="lbl_titlePanelListRestricao"
						value="#{msgsRestricao['TITLE.panelLista']}"
						styleClass="tituloPagina" />
					<br />
					<rich:spacer height="10" />
					<rich:dataTable
						id="tableRestricao"
						value="#{restricaoMB.listRestricao}"
						var="row"
						rows="10"
						width="100%"
						cellspacing="0"
						cellpadding="0"
						border="1"
						rowClasses="tabela-row-1, tabela-row-2"
						onRowMouseOver="this.style.backgroundColor = '#A2B6E5'"
						onRowMouseOut="this.style.backgroundColor = ''">
						<rich:column
							id="colRestricaonuRestricao"
							style="text-align:center;"
							width="150"
							sortBy="#{row.coRestricao}">
							<f:facet name="header">
								<h:outputText 
									styleClass="rotulos"
									value="#{msgsRestricao['TABLE.coRestricao']}" />
							</f:facet>
							<h:commandLink
								actionListener="#{restricaoMB.doVisualizar}"
								id="lblnuRestricao"
								value="#{row.coRestricao}" />
						</rich:column>
						<rich:column
							id="colRestricaonoRestricao"
							style="text-align:left;"
							sortBy="#{row.noRestricao}">
							<f:facet name="header">
								<h:outputText 
									styleClass="rotulos"
									value="#{msgsRestricao['TABLE.noRestricao']}" />
							</f:facet>
							<h:commandLink
								actionListener="#{restricaoMB.doVisualizar}"
								id="lblnoRestricao"
								value="#{row.noRestricao}" />
						</rich:column>
						<rich:column
							id="colRestricaosgSistemaDestino"
							style="text-align:left;"
							sortBy="#{row.sistemaDestino}">
							<f:facet name="header">
								<h:outputText
									styleClass="rotulos"
									value="#{msgsRestricao['TABLE.sistemaDestino']}" />
							</f:facet>
							<h:commandLink
								actionListener="#{restricaoMB.doVisualizar}"
								id="lblnoSistemaDestino"
								value="#{row.sistemaDestino}" />
						</rich:column>
						<rich:column
							id="colRestricaoUpdate"
							style="text-align:center;"
							headerClass="th-text-center"
							width="50">
							<f:facet name="header">
								<h:outputText 
									styleClass="rotulos"
									value="#{msgsRestricao['ACTION.acao']}" />
							</f:facet>
							<h:commandLink
								id="lnkUpdate"
								actionListener="#{restricaoMB.doAtualizar}"
								style="border-style:none;border-width:0;">
								<h:graphicImage
									id="imgUpdate"
									styleClass="action-icon"
									alt="Alterar"
									title="Alterar"
									value="/images/icon_editar.gif" />
							</h:commandLink>
							<h:commandLink
								id="lnkDisable"
								rendered="#{!restricaoMB.pesquisaMostraInativos}"
								onclick="if(!confirm('Confirma a Inativação?')) {return false;}"
								actionListener="#{restricaoMB.doDesabilitarNaGrid}"
								style="border-style:none;border-width:0;">
								<h:graphicImage
									id="imgDisable"
									styleClass="action-icon"
									alt="Inativar"
									title="Inativar"
									value="/images/icon_-delete.gif" />
							</h:commandLink>
							<h:commandLink
								id="lnkEnable"
								rendered="#{restricaoMB.pesquisaMostraInativos}"
								onclick="if(!confirm('Confirma a Ativação?')) {return false;}"
								actionListener="#{restricaoMB.doDesabilitarNaGrid}"
								style="border-style:none;border-width:0;">
								<h:graphicImage
									id="imgEnable"
									styleClass="action-icon"
									alt="Ativar"
									title="Ativar"
									value="/images/icon_ativo.gif" />
							</h:commandLink>
						</rich:column>
						<f:facet name="footer">
							<rich:datascroller
								fastControls="false"
								inactiveStyleClass="classe-datascroller classe-datascroller-unselected"
								selectedStyleClass="classe-datascroller classe-datascroller-selected"
								id="dataFooterProduto"
								renderIfSinglePage="false">
								<f:facet name="first">
									<h:graphicImage value="/images/tabela/seta_primeiro.gif" />
								</f:facet>
								<f:facet name="first_disabled">
									<h:graphicImage value="/images/tabela/seta_primeiro.gif" />
								</f:facet>
								<f:facet name="last">
									<h:graphicImage value="/images/tabela/seta_ultimo.gif" />
								</f:facet>
								<f:facet name="last_disabled">
									<h:graphicImage value="/images/tabela/seta_ultimo.gif" />
								</f:facet>
								<f:facet name="previous">
									<h:graphicImage value="/images/tabela/seta_anterior.gif" />
								</f:facet>
								<f:facet name="previous_disabled">
									<h:graphicImage value="/images/tabela/seta_anterior.gif" />
								</f:facet>
								<f:facet name="next">
									<h:graphicImage value="/images/tabela/seta_proximo.gif" />
								</f:facet>
								<f:facet name="next_disabled">
									<h:graphicImage value="/images/tabela/seta_proximo.gif" />
								</f:facet>
							</rich:datascroller>
						</f:facet>
					</rich:dataTable>
				</h:panelGroup>
			</rich:panel>
		</h:form>
	</ui:define>
</ui:composition>
</html>
